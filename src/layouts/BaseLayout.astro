---
// src/layouts/BaseLayout.astro
import '../styles/global.css';
const { title = "Neurotricks", centered = false } = Astro.props;

const layoutClass = centered
  ? "flex flex-col items-center justify-center min-h-screen px-4"
  : "max-w-3xl mx-auto px-4 py-8";
---
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#000000" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gradient-to-br from-black via-zinc-900 to-gray-800 text-white font-sans min-h-screen">
    <main class={layoutClass}>
      <slot />
    </main>
  </body>
</html>
