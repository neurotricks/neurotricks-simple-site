---
import { getBreadcrumbs } from 'astro-breadcrumbs';

const { url } = Astro;
const breadcrumbs = getBreadcrumbs(url.pathname);
---

<nav class="breadcrumbs mb-6 text-sm">
  <ul class="flex flex-wrap items-center gap-2 text-gray-400 animate-fade-in">
    <li>
      <a href="/" class="hover:text-white transition flex items-center gap-1">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-purple-500 font-semibold">🏠 Главная</span>
      </a>
    </li>

    {breadcrumbs.map((crumb, index) => (
      <li class="flex items-center gap-1">
        <span class="text-zinc-600">/</span>
        {index !== breadcrumbs.length - 1 ? (
          <a href={crumb.href} class="hover:text-white transition">
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-purple-500">{crumb.label}</span>
          </a>
        ) : (
          <span class="text-gray-500">{crumb.label}</span>
        )}
      </li>
    ))}
  </ul>
</nav>
