---
const path = Astro.url.pathname;
const parts = path.split('/').filter(Boolean);

const breadcrumbs = parts.map((segment, index) => {
  const href = '/' + parts.slice(0, index + 1).join('/') + '/';
  const label = segment[0].toUpperCase() + segment.slice(1);
  return { href, label };
});
---

<nav class="text-sm breadcrumbs text-gray-400 py-2 mb-6">
  <ul class="flex flex-wrap items-center gap-1">
    <li><a href="/" class="hover:text-white transition">Главная</a></li>
    {breadcrumbs.map((crumb, index) => (
      <li class="inline-block">
        {index !== breadcrumbs.length - 1 ? (
          <a href={crumb.href} class="hover:text-white transition">{crumb.label}</a>
        ) : (
          <span class="text-gray-500">{crumb.label}</span>
        )}
      </li>
    ))}
  </ul>
</nav>
