---
import { getBreadcrumbs } from 'astro-breadcrumbs';

const { url } = Astro;
const breadcrumbs = getBreadcrumbs(url.pathname);
---

<nav class="w-full breadcrumbs mb-6 text-sm">
  <ul>
    <li>
      <a href="/" class="text-gray-300 hover:text-white transition">Главная</a>
    </li>
    {breadcrumbs.map((crumb, index) => (
      <li>
        {index !== breadcrumbs.length - 1 ? (
          <a href={crumb.href} class="text-cyan-400 hover:text-white transition">
            {crumb.label}
          </a>
        ) : (
          <span class="text-gray-500">{crumb.label}</span>
        )}
      </li>
    ))}
  </ul>
</nav>
